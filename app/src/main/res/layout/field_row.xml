<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:id="@+id/mainViewId"
    android:layout_width="match_parent"
    android:layout_height="@dimen/field_height"
    android:foreground="?android:attr/selectableItemBackground">
    <RelativeLayout
        android:id="@+id/mainContentViewId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding12">
        <TextView
            android:id="@+id/fieldTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_large_material"
            android:textColor="@color/grey_900"
            android:layout_centerVertical="true"
            android:text=""/>

        <ImageView
            android:id="@+id/fieldButton"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/cardview_icon_back"
            android:layout_height="@dimen/cardview_icon_back"
            android:src="@drawable/ic_edit_black" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
